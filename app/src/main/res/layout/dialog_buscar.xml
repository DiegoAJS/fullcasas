<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="450dp"
        android:layout_centerInParent="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                style="@style/CardView">

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ofertas"
                    android:layout_marginRight="16dp"/>

                <Spinner
                    android:id="@+id/sp_oferta_buscar"
                    android:layout_width="match_parent"
                    android:layout_height="36dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                style="@style/CardView">

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inmuebles"
                    android:layout_marginRight="16dp"/>

                <Spinner
                    android:id="@+id/sp_inmueble_buscar"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                style="@style/CardView">

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:text="Ubicacion" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <Spinner
                        android:id="@+id/sp_departamento_buscar"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"/>

                    <Spinner
                        android:id="@+id/sp_ciudad_buscar"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_height="36dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                style="@style/CardView">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:text="Cuartos" />

                <Spinner
                    android:id="@+id/sp_cuartos_buscar"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:entries="@array/array_numeros" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:text="BaÃ±os" />

                <Spinner
                    android:id="@+id/sp_banios_buscar"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:entries="@array/array_numeros" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Dinero" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/et_minp_buscar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Minimo"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:imeOptions="actionSearch"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/et_maxp_buscar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Maximo"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:imeOptions="actionSearch"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:clickable="true"
        android:src="@drawable/ic_clear_24dp"
        android:padding="8dp"
        android:background="@drawable/background_redondear"
        android:layout_alignParentBottom="true"
        android:id="@+id/iv_cancelar_buscar"
        android:layout_margin="16dp"
        android:elevation="10dp"/>

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_margin="16dp"
        android:elevation="10dp"
        android:clickable="true"
        android:src= "@drawable/ic_search_24dp"
        android:padding="8dp"
        android:background="@drawable/background_redondear"
        android:id="@+id/iv_imagen_buscar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>



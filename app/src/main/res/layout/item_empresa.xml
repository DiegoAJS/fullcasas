<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_item_empresa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/iv_logo_item_empresa"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:text="empresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SubTitulo"
                android:id="@+id/tv_empresa_item_empresa"
                android:layout_toRightOf="@+id/iv_logo_item_empresa"
                android:layout_toEndOf="@+id/iv_logo_item_empresa"
                android:layout_alignTop="@+id/iv_logo_item_empresa"
                android:cursorVisible="true"
                android:layout_marginRight="40dp"
                android:maxLines="2"/>

            <TextView
                android:text="direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_direccion_item_empresa"
                android:layout_below="@+id/tv_empresa_item_empresa"
                android:layout_toRightOf="@+id/iv_logo_item_empresa"
                android:layout_toEndOf="@+id/iv_logo_item_empresa"
                android:layout_marginRight="40dp"
                android:maxLines="2"
                style="@style/Contenido"/>

            <ImageView
                android:id="@+id/iv_next_item_empresa"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_direccion_item_empresa"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:scaleType="center"
                android:src="@drawable/play_arrow" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <!-- Objeto con Scroll -->
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="0dp">

            <!-- Card Perfil -->


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--Etiqueta tipo oferta precio -->

                    <TextView
                        android:id="@+id/tv_titulo_inmueble"
                        style="@style/Titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="titulo" />

                    <TextView
                        android:id="@+id/tv_precio_inmueble"
                        style="@style/Precio"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:layout_height="wrap_content"
                        android:text="Precio"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:maxLines="2"
                        />

                    <TextView
                        android:id="@+id/tv_ubicacion_inmueble"
                        style="@style/Contenido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ubicacion" />

                    <TextView
                        android:id="@+id/tv_descripcion_inmueble"
                        style="@style/Contenido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="descripcion" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_cuartos"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cuartos" />

                        <TextView
                            android:id="@+id/tv_cuartos_inmueble"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_banios"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="BaÃ±os" />

                        <TextView
                            android:id="@+id/tv_banios_inmueble"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_salas"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Salas" />

                        <TextView
                            android:id="@+id/tv_salas_inmueble"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_patios"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Patios" />

                        <TextView
                            android:id="@+id/tv_patios_inmueble"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_garajes"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Garajes" />

                        <TextView
                            android:id="@+id/tv_garajes_inmueble"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_agua"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Agua" />

                        <TextView
                            android:id="@+id/tv_agua_inmueble"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SI" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_luz"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Luz" />

                        <TextView
                            android:id="@+id/tv_luz_inmueble"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SI" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_gas"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gas" />

                        <TextView
                            android:id="@+id/tv_gas_inmueble"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SI" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_modoentrega"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Modo de entrega" />

                        <TextView
                            android:id="@+id/tv_modoentrega_inmueble"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_area"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TamaÃ±o propiedad" />

                        <TextView
                            android:id="@+id/tv_area_inmueble"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <!--Texto de descripcion-->

                    <!--Texto de datos tecnicos-->

                    <!--Texto de servicios-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_superficie"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Superficie construida" />

                        <TextView
                            android:id="@+id/tv_superficie_inmueble"
                            style="@style/Contenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_fecha_inmueble"
                        style="@style/Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="fecha" />

                    <!--Texto de datos ubicacion-->


                    <!--Texto de codiciones-->

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    style="@style/Widget.CardContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_empresa_inmueble"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_logo_inmueble"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:layout_gravity="center"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginRight="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <!--Etiqueta empresa -->
                        <TextView
                            android:id="@+id/tv_empresa_inmueble"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Empresa"
                            android:gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="#FFFFFF"
                            android:background="@color/colorPrimary"
                            android:maxLines="1"
                            android:alpha="0.85"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                        <!--Texto de direccion-->
                        <TextView
                            android:id="@+id/tv_direccion_inmueble"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="direccion" />

                        <!--Texto de telefonos-->
                        <TextView
                            android:id="@+id/tv_telefono_inmueble"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="phone"
                            android:text="telefono"/>
                            </LinearLayout>
                            <ImageView
                                android:layout_height="match_parent"
                                android:src="@drawable/play_arrow"
                                android:scaleType="center"
                                android:layout_gravity="end"
                                android:layout_width="24dp"
                                android:id="@+id/iv_empresa_inmueble"/>

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <!-- App Bar -->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_inmueble"
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Collapser -->
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapser_inmueble"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginBottom="200dp"
            app:expandedTitleMarginStart="5dp"
            app:expandedTitleTextAppearance="@style/titulosbarexpant"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- Imagen del detalle -->
            <ImageView
                android:id="@+id/iv_image_paralax_inmueble"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                app:layout_collapseMode="parallax" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:alpha="0.75"
                android:background="@color/cardview_dark_background"
                android:layout_gravity="bottom">
                <TextView
                    android:id="@+id/tv_galeria_inmueble"
                    style="@style/galeria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galeria imagenes"
                    android:layout_marginLeft="16dp"
                    android:textColor="#ffffff" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_photo_library" />
            </LinearLayout>

            <!-- Toolbar -->
            <android.support.v7.widget.Toolbar
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/toolbar_inmueble"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/CustomActionBar"/>
        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>

    <!-- FAB -->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_inmueble"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:src="@drawable/ic_call_24dp"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:layout_anchor="@id/app_bar_inmueble"
        app:layout_anchorGravity="bottom|right|end" />


</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_imagen_noresults"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_cloud_queue_24dp" />

    <ImageView
        android:id="@+id/iv_errot_noresults"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_emoticon_sad" />

    <TextView
        android:id="@+id/tv_texto_noresults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_imagen_noresults"
        android:layout_centerHorizontal="true"
        style="@style/SubTitulo"
        android:text="Oh no! no hay resultados" />
</RelativeLayout>
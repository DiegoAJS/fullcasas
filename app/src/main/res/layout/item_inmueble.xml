<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_item_inmueble"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_titulo_item_inmueble"
                style="@style/SubTitulo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/iv_imagen_item_inmueble"
                android:layout_marginLeft="15dp"
                android:maxLines="1"
                android:text="titulo" />

            <TextView
                android:id="@+id/tv_descripcion_item_inmueble"
                style="@style/Precio"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_titulo_item_inmueble"
                android:layout_marginLeft="15dp"
                android:maxLines="2"
                android:text="descripcion" />

            <ImageView
                android:id="@+id/iv_imagen_item_inmueble"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:maxHeight="320dp"
                android:minHeight="200dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/iv_share_item_inmueble"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/iv_imagen_item_inmueble"
                android:scaleType="centerCrop"
                android:src="@drawable/compartir"
                android:layout_marginRight="10dp"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/fondo_titulo_carta"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/iv_imagen_item_inmueble"
                android:background="@color/colorPrimaryDark"
                android:alpha="0.85"/>
            <TextView
                android:id="@+id/tv_empresa_item_inmueble"
                style="@style/SubTitulo"
                android:textColor="#ffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:text="Empresa"
                android:layout_alignTop="@+id/iv_imagen_item_inmueble"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
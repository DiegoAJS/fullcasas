<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_buscar_inmueble_textinputlayout"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/et_buscar_activity_inmueble"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Buscar"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"  />

    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/tv_oferta_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oferta"
        android:layout_below="@id/et_buscar_inmueble_textinputlayout"/>
    <Spinner
        android:id="@+id/sp_oferta_buscar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/et_buscar_inmueble_textinputlayout"
        android:layout_toRightOf="@+id/tv_oferta_buscar"
        android:layout_toEndOf="@+id/tv_oferta_buscar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inmueble"
        android:id="@+id/tv_inmueble_buscar"
        android:layout_below="@id/sp_oferta_buscar"
        />

    <Spinner
        android:id="@+id/sp_inmueble_buscar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@+id/sp_oferta_buscar"
        android:layout_toRightOf="@+id/tv_oferta_buscar"
        android:layout_toEndOf="@+id/tv_oferta_buscar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lugar"
        android:layout_column="0"
        android:layout_row="3"/>
    <Spinner
        android:id="@+id/sp_departamento_buscar"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginBottom="10dp"
        android:layout_column="1"
        android:layout_row="3"/>
    <Spinner
        android:id="@+id/sp_ciudad_buscar"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginBottom="10dp"
        android:layout_column="1"
        android:layout_row="4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuartos"
        android:layout_column="0"
        android:layout_row="5"/>
    <Spinner
        android:id="@+id/sp_cuartos_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/array_numeros"
        android:layout_row="5"
        android:layout_column="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BaÃ±os"
        android:layout_column="2"
        android:layout_row="5"/>
    <Spinner
        android:id="@+id/sp_banios_buscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:entries="@array/array_numeros"
        android:layout_column="3"
        android:layout_row="5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dinero"
        android:layout_column="0"
        android:layout_row="6"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="6">

        <EditText
            android:id="@+id/et_minp_buscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Minimo"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"  />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="6">

        <EditText
            android:id="@+id/et_maxp_buscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Maximo"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:clickable="true"
        android:src="@drawable/ic_clear_24dp"
        android:padding="5dp"
        android:background="@drawable/background_redondear"
        android:layout_alignParentBottom="true"
        android:id="@+id/iv_cancelar_buscar"
        android:layout_margin="16dp"
        android:elevation="10dp"
        android:layout_column="0"
        android:layout_row="7"/>

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_margin="16dp"
        android:elevation="10dp"
        android:clickable="true"
        android:src= "@drawable/ic_search_24dp"
        android:padding="5dp"
        android:background="@drawable/background_redondear"
        android:id="@+id/iv_imagen_buscar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_row="7"
        android:layout_column="3"/>

</RelativeLayout>